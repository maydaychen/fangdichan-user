@import '/static/styles/variable.wxss';
@import '/static/iconfont/iconfont.wxss';

page {
  background-color: var(--color-background);
  width: 100%;
  font-size: 32rpx;
  font-family: PingFangSC;
}

.container {
  font-size: var(--font-size-medium-x);
  line-height: 1.5;
}

.horizon-center {
  margin: 0 auto;
}

.vertical-center {
  margin: auto 0;
}

.text-center {
  text-align: center;
}

.flex-between {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
}

.just-flex {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.font-3232 {
  color: var(--color-certification-title);
}

.line {
  height: 1rpx;
  width: 100%;
}
