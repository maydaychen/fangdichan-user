/* pages/entrust/estimate-house/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.top {
  width: 100%;
  margin-top: 70rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  color: var(--color-certification-title);
}

.top .title {
  font-size: var(--font-size-large-x);
  font-weight: bold;
  margin-bottom: 30rpx;
}

.top .sub-title {
  font-size: var(--font-size-medium-x);
}

.address {
  width: 604rpx;
  height: 224rpx;
  margin: 0 auto;
  margin-top: 79rpx;
  background-color: var(--color-white);
}

.select-group {
  width: 100%;
  padding: 33rpx 30rpx 33rpx 22rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--color-border-color);
  font-size: var(--font-size-large);
}

.select-group .select-icon {
  margin-left: 20rpx;
}

.select-group .left {
  color: var(--color-sub-title);
  font-size: var(--font-size-large);
  display: flex;
  align-items: center;
}

.select-group .right {
  color: var(--color-sub-title);
}

.select-group:last-child {
  border-bottom: none;
}

.select-group .icon {
  color: var(--color-unactive-color);
  font-size: 44rpx;
  margin-right: 24rpx;
}

.estimate-btn {
  width: 600rpx;
  height: 94rpx;
  margin: 28rpx auto;
  background-color: var(--color-button-background);
  font-size: var(--font-size-large-x);
  color: var(--color-background);
}

.no-clear {
  color: var(--color-sub-title);
  font-size: var(--font-size-medium-x);
  text-align: center;
  margin-top: 150rpx;
}

.info-icon {
  width: 89rpx;
  height: 89rpx;
  margin: 49rpx auto;
}

.info-icon image {
  width: 100%;
  height: 100%;
}

.input-info-notice {
  color: var(--color-sub-title);
  font-size: var(--font-size-medium-x);
  text-align: center;
  margin-top: 41rpx;
}
