/* pages/entrust/select-house/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.select-sales-houses {
  background-color: var(--color-background);
  width: 100%;
  height: 100%;
}

.search-group {
  width: 657rpx;
  height: 79rpx;
  margin: 0 auto;
  margin-top: 19rpx;
  background-color: var(--color-white);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 33rpx;
  padding-right: 33rpx;
  box-sizing: border-box;
  color: #8a8a8a;
}

.search-group .left {
  height: 100%;
  display: flex;
  align-items: center;
}

.search-group .icon {
  font-size: 42rpx;
}

.search-group .search-input {
  margin-left: 10rpx;
  font-size: var(--font-size-medium-x);
}

.near-title {
  margin-top: 18rpx;
  margin-left: 50rpx;
  display: block;
  font-size: var(--font-size-medium-x);
  color: var(--color-sub-title);
}

.select-sales-houses .list {
  width: 710rpx;
  margin: 0 auto;
  margin-top: 29rpx;
  border-radius: 5rpx;
}

.select-sales-houses .list .item {
  background-color: var(--color-white);
  padding: 40rpx 15rpx 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--color-split-line);
  font-size: var(--font-size-large);
}

.select-sales-houses .list .item:last-child {
  border-bottom: none;
}

.select-sales-houses .list .item .name {
  color: var(--color-certification-title);
}

.select-sales-houses .list .item .number {
  color: var(--color-sub-title);
}