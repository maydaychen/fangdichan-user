/* pages/entrust/release-house/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.select-group {
  width: 710rpx;
  margin: 0 auto;
  padding: 25rpx 19rpx 25rpx 5rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--color-border-color);
  font-size: var(--font-size-large);
}

.select-group .select-icon {
  margin-left: 20rpx;
}

.select-group .left {
  color: var(--color-certification-title);
}

.select-group .right {
  color: var(--color-sub-title);
}

.release-house .select-group:last-child {
  border-bottom: none;
}

.release-house .first-area {
  margin-bottom: 20rpx;
  background-color: var(--color-white);
  width: 100%;
}

.release-house .second-area {
  background-color: var(--color-white);
  width: 100%;
}

.name-input {
  width: 725rpx;
  height: 130rpx;
  margin: 0 auto;
  margin-top: 58rpx;
  padding-left: 35rpx;
  box-sizing: border-box;
  background-color: var(--color-white);
  font-size: var(--font-size-large-y);
}

.save-btn {
  width: 600rpx;
  height: 94rpx;
  margin: 0 auto;
  margin-top: 145rpx;
  background-color: var(--color-button-background);
  font-size: var(--font-size-large-x);
  color: var(--color-white);
}

.sure-btn {
  width: 714rpx;
  height: 99rpx;
  position: fixed;
  bottom: 48rpx;
  left: 18rpx;
  background-color: var(--color-button-background);
  font-size: var(--font-size-large-x);
  color: var(--color-background );
}

.mask {
  width: 100%;
  min-height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .5);
  z-index: 2;
  /* display: none; */
}

.mask .pop {
  width: 100%;
  height: 500rpx;
  position: fixed;
  bottom: 0;
  overflow-y: scroll;
}

.mask .pop > view {
  width: 100%;
  text-align: center;
  padding: 35rpx 0rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid var(--color-border-color);
  background-color: #fff;
}