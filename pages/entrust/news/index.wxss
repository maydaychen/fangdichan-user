/* pages/entrust/news/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.advertisement {
  width: 708rpx;
  height: 349rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 21rpx;
  background-repeat: no-repeat;
  background-size: cover;
}

.mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .2);
  color: #fff;
}

.mask .bottom {
  width: 620rpx;
  left: 110rpx;
  position: absolute;
  bottom: 45rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}

.mask .bottom .question {
  font-size: 30rpx;
}

.content {
  width: 710rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  color: #323232;
  font-size: 28rpx;
}

.item {
  width: 708rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 31rpx;
  display: flex;
  border-bottom: 1rpx solid #d2d2d2;
}

.item .left {
  width: 248rpx;
  height: 188rpx;
}

.item .right {
  width: 435rpx;
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.item .right .title {
  font-size: 32rpx;
}

.item .right .address {
  margin-top: 15rpx;
  color: #666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.item .right .tags {
  margin-top: 15rpx;
}

.item .right .tags text {
  padding: 5rpx;
  background-color: #fee483;
  color: #8e9ca7;
  font-size: 24rpx;
  margin-right: 10rpx;
}

.item .right .price {
  margin-top: 15rpx;
}

.item .right .price .total {
  font-size: 34rpx;
  color: #f60000;
}

.item .right .price .average {
  color: #a8a8a8;
  margin-left: 60rpx;
}

.item:last-child {
  border-bottom: none;
}