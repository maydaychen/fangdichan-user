/* pages/entrust/estimate-house-result/index.wxss */
@import '/static/iconfont/iconfont.wxss';
.top {
  width: 100%;
  padding: 8rpx 20rpx 38rpx;
  box-sizing: border-box;
  background-color: var(--color-sure-btn);
  color: var(--color-white);
}

.top .house-address {
  font-size: var(--font-size-large-a);
}

.top .house-price {
  margin-top: 58rpx;
}

.house-price .total {
  font-size: 70rpx;
  font-weight: bold;
}

.house-price .unit {
  font-size: 30rpx;
}

.house-price .average {
  font-size: 32rpx;
  margin-left: 30rpx;
}

.top .compare {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.top .compare .compare-notice {
  font-size: 32rpx;
  color: #cfe9fd;
  margin-right: 130rpx;
}

.top .compare .icon {
  margin-right: 20rpx;
}

.top .compare .inaccurate {
  margin-left: 75rpx;
}

.top .line {
  width: 100%;
  height: 0rpx;
  margin-top: 50rpx;
  border-top: 1rpx solid #a0d2fd;
}

.top .to-input-info {
  margin-top: 35rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.track-estimate {
  background-color: #fff;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.track-estimate text {
  margin-bottom: 19rpx;
}

.track-estimate text :last-child {
  margin-bottom: 0rpx;
}

.track-estimate .title {
  font-size: 36rpx;
  color: #323232;
}

.track-estimate .subscribe-estimate {
  padding: 19rpx;
  box-sizing: border-box;
  border: 1rpx solid #a0a0a0;
  border-radius: 5rpx;
}

.maintenance-man-info {
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  padding: 25rpx 38rpx 25rpx 21rpx;
  box-sizing: border-box;
  color: #323232;
}

.maintenance-man-info .title {
  font-size: 32rpx;
}

.maintenance-man-info .info {
  display: flex;
  margin-top: 28rpx;
}

.maintenance-man-info .info .left {
  width: 80rpx;
  height: 80rpx;
}

.maintenance-man-info .info .right {
  height: 100%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info .right .introduction {
  display: flex;
  width: 590rpx;
  justify-content: space-between;
}

.info .name {
  font-size: 30rpx;
  margin-right: 58rpx;
}

.info .job {
  font-size: 22rpx;
}

.info .icon-group {
  display: flex;
}

.info .phone-icon {
  width: 60rpx;
  height: 35rpx;
  background-color: #eaf3fa;
  border-radius: 5rpx;
  color: #1296d8;
  text-align: center;
  line-height: 36rpx;
}

.info .message-icon {
  width: 60rpx;
  height: 35rpx;
  background-color: #e7fbe7;
  color: #13db1c;
  margin-left: 40rpx;
  text-align: center;
  line-height: 36rpx;
}

.info .score {
  font-size: 24rpx;
  color: #666;
}

.info .description {
  font-size: 26rpx;
}

.recent-deal {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  color: #323232;
  padding: 19rpx 45rpx 31rpx 21rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.recent-deal .item {
  width: 100%;
  margin-top: 31rpx;
  display: flex;
}

.item .left {
  width: 248rpx;
  height: 188rpx;
}

.item .right {
  width: 410rpx;
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.item .right .title {
  font-size: 32rpx;
}

.item .right .house-type {
  margin-top: 15rpx;
  color: #666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.item .right .price {
  margin-top: 15rpx;
}

.item .right .price .total {
  font-size: 34rpx;
  color: #f60000;
}

.item .right .price .average {
  color: #a8a8a8;
  margin-left: 60rpx;
}

.recent-deal .line {
  width: 100%;
  margin-top: 20rpx;
  height: 0rpx;
  border-top: 1rpx solid #e5e5e5;
}

.recent-deal .more-deal {
  width: 650rpx;
  height: 80rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #dcdcdc;
  font-size: 30rpx;
  color: #323232;
  text-align: center;
  line-height: 80rpx;
  border-radius: 5rpx;
}

.bottom-btn-group {
  width: 598rpx;
  margin: 0 auto;
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #1f8adc;
  font-size: 32rpx;
}

.bottom-btn-group .btn-item {
  display: flex;
}

.bottom-btn-group .btn-item image {
  width: 41rpx;
  height: 41rpx;
  margin-right: 10rpx;
}