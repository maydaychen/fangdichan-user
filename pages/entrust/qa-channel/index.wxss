/* pages/entrust/qa-channel/index.wxss */
@import '/static/iconfont/iconfont.wxss';

.search-group {
  width: 710rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-top: 22rpx;
  background-color: var(--color-white);
  border:1rpx solid rgba(168, 168, 168, 0.2);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  padding-left: 33rpx;
  padding-right: 33rpx;
  box-sizing: border-box;
  color: #8a8a8a;
}

.search-group .icon {
  font-size: 42rpx;
}

.search-group .search-input {
  width: 85%;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.daily-report {
  width: 708rpx;
  height: 349rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 21rpx;
  background-repeat: no-repeat;
  background-size: cover;
}

.mask {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .2);
  color: #fff;
}

.daily-report .mask .label {
  width: 65rpx;
  height: 65rpx;
  background-color: #298ef8;
  border-radius: 5rpx;
  padding: 5rpx 6rpx;
  box-sizing: border-box;
  text-align: center;
}

.mask .top {
  width: 100%;
  display: flex;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
}

.mask .top .view-past {
  width: 120rpx;
  height: 35rpx;
  text-align: center;
  line-height: 35rpx;
  background-color: rgba(0, 0, 0, .4);
  border-radius: 40rpx;
}

.mask .bottom {
  width: 620rpx;
  left: 110rpx;
  position: absolute;
  bottom: 45rpx;
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}

.mask .bottom .question {
  font-size: 30rpx;
}

.adviser-group {
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
}

.title-group {
  width: 100%;
  padding: 34rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #323232;
  font-size: 32rpx;
  border-bottom: 1rpx solid #d2d2d2;
}

.adviser-group .title-group .more-group {
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.adviser-group .title-group .more-group .more-icon {
  margin-left: 18rpx;
}

.adviser-group .advisers {
  width: 100%;
  padding: 20rpx 68rpx 40rpx 68rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.advisers .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #323232;
  font-size: 26rpx;
}

.advisers .item image {
  width: 79rpx;
  height: 79rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.advisers .item .tag {
  width: 100rpx;
  height: 30rpx;
  margin-top: 10rpx;
  border-radius: 40rpx;
  color: #666;
  border: 1rpx solid #a0a0a0;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
}

.faq-group {
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.faq-group .questions {
  width: 100%;
  padding: 0rpx 21rpx 21rpx 21rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: space-between;
}

.faq-group .questions .item {
  width: 345rpx;
  height: 212rpx;
  margin-top: 20rpx;
  position: relative;
}

.faq-group .questions .item image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.faq-group .questions .item .mask {
  padding-left: 18rpx;
  padding-right: 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
}

.hot-question-group {
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
}

.hot-question-group .hot-questions-item {
  width: 100%;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #d2d2d2;
}

.hot-question-group .hot-questions-item .title {
  font-size: 28rpx;
  color: #323232;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.hot-question-group .hot-questions-item .description {
  font-size: 24rpx;
  color: #666;
  margin-top: 28rpx;
  margin-bottom: 15rpx;
}

.hot-question-group .hot-questions-item .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hot-questions-item .bottom .tags {
  display: flex;
  font-size: 22rpx;
}

.hot-questions-item .bottom .tags view {
  padding: 10rpx;
  box-sizing: border-box;
}

.hot-questions-item .bottom .tags .buy-house {
  background-color: #dcdcdc;
  color: #323232;
}

.hot-questions-item .bottom .tags .buy-house-advertise {
  background-color: #e2f0fa;
  color: #0467b4;
  margin-left: 10rpx;
}

.hot-questions-item .bottom .message-icon {
  color: #707070;
}

.hot-questions-item .bottom .comment-number {
  color: #707070;
  margin-left: 10rpx;
}

.btn-group {
  padding: 32rpx 120rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}

.btn-group .btn-item {
  display: flex;
}

.btn-group .left {
  color: #1f8adc;
}

.btn-group image {
  width: 48rpx;
  height: 44rpx;
  display: block;
  margin-right: 20rpx;
}