/* pages/index/manager/detail.wxss */
.container {
  padding: 20rpx;
}

.info {
  background: var(--color-white);
  border-radius: 4rpx;
  padding: 24rpx 30rpx 30rpx 30rpx;
}

.info-top {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid var(--color-border-color);
}

.name {
  font-size: var(--font-size-large-a);
  color: var(--color-certification-title);
}

.level {
  color: #2894E7;
  font-size: var(--font-size-small-a);
  padding: 2rpx 11rpx;
  border: 1rpx solid #2894E7;
  border-radius: 8rpx;
  margin-left: 20rpx;
}

.top-left {
  width: 329rpx;
  border-right: 1rpx solid var(--color-border-color);
  padding-left: 100rpx;
}

.top-left>view {
  display: flex;
  align-items: center;
}

.years {
  font-size: var(--font-size-small);
  color: var(--color-sub-title);
  margin-top: 14rpx;
}

.info-middle {
  display: flex;
  background: var(--color-white);
  padding: 20rpx 0;
  text-align: center;
  border-bottom: 1rpx solid var(--color-border-color);
}

.middle-item {
  width: 33.33%;
  border-right: 1rpx solid var(--color-border-color);
}

.middle-item view {
  font-weight: bold;
  font-size: var(--font-size-large-x);
  margin-bottom: 16rpx;
  color: var(--color-certification-title);
}

.middle-item text {
  padding-bottom: 10rpx;
  font-size: var(--font-size-medium-x);
  color: var(--color-certification-title);
}

.comment {
  color: var(--color-certification-title);
  font-size: var(--font-size-small);
  padding: 2rpx 11rpx;
  border: 1rpx solid #B5B5B5;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.comment-right {
  width: 100%;
  margin-right: 34rpx;
}

.info-no-padding {
  background: var(--color-white);
  border-radius: 4rpx;
  padding: 24rpx 0 30rpx 0;
}

.title {
  margin: 0 10rpx;
  padding-bottom: 24rpx;
  font-size: var(--font-size-large-y);
  color: var(--color-certification-title);
}

.comment-logo {
  height: 79rpx;
  width: 79rpx;
  margin: 0 16rpx 0 10rpx;
  border-radius: 50%;
}

.comment-name {
  font-size: var(--font-size-large);
  font-weight: 500;
  margin-right: 10rpx;
}

.comment-date {
  font-size: var(--font-size-small);
}

.button {
  border-radius: 4rpx;
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
  background: var(--color-border-color);
  margin: 0 30rpx;
}

.comment-detail {
  padding: 18rpx;
  padding-bottom: 0;
  background: #eeeeee;
}

.comment-detail view {
  margin-bottom: 20rpx;
  color: var(--color-certification-title);
}

.comment-detail .comment {
  color: var(--color-sub-title);
  border: 1rpx solid var(--color-sub-title);
}

.border {
  width: 100%;
  height: 1rpx;
  display: block;
}

.content {
  display: flex;
  padding: 20rpx 30rpx 0 0;
  margin-left: 20rpx;
  border-top: 1rpx solid var(--color-border-color);
}

.content image {
  width: 248rpx;
  height: 188rpx;
  padding-right: 20rpx;
}


.content_title {
  font-size: var(--font-size-large-y);
  width: 406rpx;
  color: var(--color-certification-title);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.subTitle {
  font-size: var(--font-size-medium);
  margin-top: 10rpx;
  color: var(--color-sub-title);
}


.bottom text:first-child {
  margin-top: 10rpx;
  color: #e40c01;
  font-size: var(--font-size-large-a);
}


.bottom text:last-child {
  margin-top: 10rpx;
  color: var(--color-unactive-color);
  font-size: var(--font-size-medium);
}
.service_item{
  color: var(--color-sub-title);
  font-size: var(--font-size-medium);
}