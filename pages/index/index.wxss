/**index.wxss**/
@import '/static/iconfont/iconfont.wxss';

.haibao {
  width: 100%;
  height: 369rpx;
}

.imageBener {
  width: 100%;
  height: 100%;
}

.choice-item {
  width: 20%;
  text-align: center;
}

.choice-image {
  height: 88rpx;
  width: 88rpx;
}

.pic {
  margin-top: 10rpx;
  background: var(--color-white);
}

.activity-img {
  width: 318rpx;
  height: 208rpx;
  margin-right: 22rpx;
}

.delete-pic {
  width: 320rpx;
  height: 160rpx;
  padding-top: 10rpx;
  margin-right: 20rpx;
}

.title {
  font-size: var(--font-size-large-x);
  color: var(--color-certification-title);
  background: var(--color-white);
}

.activity-title {
  padding-top: 49rpx;
}

.menu {
  padding-top: 30rpx;
  background: var(--color-white);
}
.top-nav {
  white-space: nowrap;
  display: flex;
}

.top_btn {
  display: inline-block;
  margin: 10px;
  font-size: 1rem;
  color: gray;
}

.event-title {
  padding: 49rpx 0 20rpx 0;
  border-bottom: 1rpx solid var(--color-qrcode-title);
}

.sub-title {
  padding-top: 40rpx;
}

.sub-title text {
  font-size: var(--font-size-small);
  color: var(--color-sub-title);
}

.down-content {
  padding-left: 45rpx;
  background: var(--color-white);
}

.number {
  color: var(--color-certification-title);
  font-size: var(--font-size-large-z);
}

.number-hint {
  color: var(--color-sub-title);
  font-size: var(--font-size-small);
}

.recommend {
  padding-top: 57rpx;
  display: flex;
  justify-content: space-between;
}

.recommend .recommend-item {
  padding-right: 45rpx;
  font-size: var(--font-size-medium-x);
  line-height: 100%;
  color: var(--color-sub-title);
}

.recommend .recommend-item text {
  bottom: 0;
  margin-right: 66rpx;
}

.recommend .recommend-item text:last-child {
  margin-right: 0;
}

.search-group {
  position: absolute;
  top: 42rpx;
  left: 50rpx;
  width: 650rpx;
  height: 70rpx;
  border-radius: 10rpx;
  background-color: rgba(145, 144, 144, 0.5);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 32rpx;
  padding-right: 32rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #323232;
}

.search-group .search-input-group {
  display: flex;
  align-items: center;
}

.search-group .search-icon {
  font-size: 40rpx;
  color: #666;
}

.search-group .search-input {
  margin-left: 12rpx;
}

.search-group .location-icon {
  font-size: 40rpx;
  color: #666;
}