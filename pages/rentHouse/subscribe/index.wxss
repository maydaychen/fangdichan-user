/* pages/rentHouse/subscribe/index.wxss */
.top {
  width:750rpx;
  height:180rpx;
  background:linear-gradient(0deg,rgba(26,131,212,1) 0%,rgba(44,153,238,1) 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 60rpx;
  padding-right: 60rpx;
  box-sizing: border-box;
}

.top .menu {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #6cbefd;
  font-size: 30rpx;
}

.top .menu image {
  width: 45rpx;
  height: 45rpx;
  margin-bottom: 20rpx;
}

.top .selected-menu image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
}

.top .selected-menu {
  color: #fff;
}

.top .line {
  width: 135rpx;
  height: 1rpx;
  border-top: 1rpx solid #6cbefc;
  margin-top: -60rpx;
}

.house-group {
  width: 710rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 30rpx;
  color: #323232;
}

.house-group .place {
  padding: 30rpx 10rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #dcdcdc;
}

.house-group .icon {
  margin-right: 12rpx;
  color: #c9c9c9;
}

.house-group .house-list {
  display: flex;
  padding: 30rpx 10rpx;
  box-sizing: border-box;
}

.content {
  display: flex;
}

.content image {
  width: 248rpx;
  height: 188rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 30rpx;
  width: 360rpx;
  color: #323232;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.subTitle {
  font-size: 26rpx;
  margin-top: 15rpx;
  color: #666;
}

.sale {
  padding: 15rpx 0rpx;
}

.sale text {
  font-size: var(--font-size-small);
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
  margin-right: 10rpx;
}

.sale text:first-child {
  color: #f60000;
  background: #fff8e0;
}

.sale text:nth-child(2),
.sale text:last-child {
  color: #1c87d8;
  background: rgba(191, 220, 242, 0.5);
}

.sale text:nth-child(3) {
  color: #5cb66a;
  background: rgba(202, 240, 158, 0.5);
}

.bottom text:first-child {
  color: #f60000;
  margin-right: 80rpx;
  font-size: 34rpx;
}

.bottom text:last-child {
  color: #a8a8a8;
  font-size: 30rpx;
}

.tip-group {
  font-size: 26rpx;
  color: #666;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
}

.tip-group .tip-icon {
  color: #ff5733;
  font-size: 50rpx;
  margin-left: 35rpx;
  margin-right: 10rpx;
}