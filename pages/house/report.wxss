/* pages/house/report.wxss */
page {
  background: var(--color-white);
}

.container {
  background: var(--color-white);
  padding: 20rpx;
  height: 100%;
}

.title {
  font-size: var(--font-size-large);
  color: var(--color-sub-title);
  padding: 10rpx 0 30rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.radio-item {
  font-size: var(--font-size-large);
  color: var(--color-certification-title);
}

.radio {
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--color-border);
}

button {
  background: #1d87d9;
  width: 100%;
  height: 94rpx;
  color: #fff;
  font-size: var(--font-size-large-x);
  box-shadow: 0px 1px 1px 0px #1d87d9;
  margin: 40rpx auto 46rpx;
}

textarea{
  height: 200rpx;
  width: 96%;
  border: 1rpx solid #222222;
  padding: 10rpx;
  border-radius: 4rpx;
  margin: 10rpx auto;
  margin-top: 30rpx;

}