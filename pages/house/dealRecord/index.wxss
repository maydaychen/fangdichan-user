/* pages/house/dealRecord/index.wxss */
page {
  background: var(--color-white);
}

.item-area {
  margin: 30rpx 0 20rpx 20rpx;
  color: var(--color-certification-title);
  font-size: var(--font-size-large-y);
}

.subtitle {
  color: var(--color-sub-title);
  font-size: var(--font-size-large);
}

.item-time {
  margin: 0 0 30rpx 20rpx;
}

.item-price {
  font-size: 34rpx;
  color: #238EE1;
  margin: 30rpx 20rpx 20rpx 0;
}

.item-type {
  text-align: center;
  margin: 0 20rpx 30rpx 0;
}

.border {
  width: 100%;
  height: 1rpx;
  display: block;
}

.content {
  border-bottom: 2rpx solid #D2D2D2;
}

.half {
  box-sizing: border-box;
  padding: 30rpx 0 30rpx 20rpx;
  width: 50%;
  color: #A8A8A8;
  font-size: 32rpx;
}

.half view text{
  color: var(--color-certification-title);
  font-size: 32rpx;
  margin:5rpx;
}