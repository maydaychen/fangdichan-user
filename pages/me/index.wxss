/* pages/me/index.wxss */

@import '/static/iconfont/iconfont.wxss';
@import '/static/styles/base.wxss';

page {
    background-color: var(--color-background);
    color: var(--color-certification-title);
    padding: 12rpx;
    box-sizing: border-box;
}

.head {
    background: var(--color-white);
    width: 100%;
}

.logo {
    height: 110rpx;
    width: 110rpx;
    margin-right: 31rpx;
}

.head-top {
    width: 100%;
    height: 110rpx;
    padding: 49rpx 0 0 43rpx;

    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.head-bottom {
    display: flex;
    padding-top: 50rpx;
    width: 100%;
    padding-bottom: 51rpx;
}

.head-bottom-item {
    text-align: center;
    width: 25%;
}

.head-item-num {
    font-size: var(--font-size-large-x);
}

.head-item-name {
    font-size: var(--font-size-medium-x);
}

.title {
    padding: 32rpx 0 0 29rpx;
}

.icon {
    font-size: 30rpx;
    width: 48rpx;
    margin: 0 auto;
    height: 48rpx;
}

.me-choice {
    width: 100%;
    height: 82rpx;
    background: var(--color-white)
}

.person_choice {
    color: var(--color-certification-title);
    margin-left: 19rpx;
    line-height: 82rpx;
    font-size: var(--font-size-large);
}

.icon-right {
    margin-right: 30rpx;
    color: var(--color-sub-text);
}