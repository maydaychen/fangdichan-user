/* pages/me/fedback/index.wxss */
@import '/static/styles/base.wxss';
@import '/template/template.wxss';

.container {
    padding: 0 15rpx;
}

.head {
    height: 150rpx;
    width: auto;
    display: flex;
    align-items: center;
    justify-content: center
}

.head-item {
    font-size: var(--font-size-large-y);
    color: var(--color-unactive-color);
    padding: 0 15rpx;
    border-right: 1rpx solid var(--color-unactive-color);
}

.head-item:last-child {
    font-size: var(--font-size-large-y);
    color: var(--color-unactive-color);
    padding: 0 15rpx;
    border-right: 0rpx;
}

.active {
    color: var(--color-sub-title);
}

.text {
    width: 100%;
    height: 311rpx;
    border-radius: 10rpx;
    padding: 62rpx 0 0 25rpx;
    background: #f5f5f5;
}

.problem-hint {
    width: 653rpx;
    line-height: 38rpx;
    color: #C2C0C0;
    font-size: var(--font-size-small);
    margin: 16rpx auto 0;
}

.textarea-placeholder {
    font-weight: 400;
    font-size: var(--font-size-medium-x);
    color: var(--color-login-notice);
}

.problem-submie {
    color: var(--color-white);
    height: 100rpx;
    margin: 81rpx auto 0;
    text-align: center;
    width: 605rpx;
    background: #298ef8;
}