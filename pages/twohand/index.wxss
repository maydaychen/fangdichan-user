/* pages/me/collection/index.wxss */
@import '/static/iconfont/iconfont.wxss';
@import '/template/template.wxss';

page {
  background: var(--color-white);
}

.top {
  padding: 20rpx;
  display: flex;
}

.top>text {
  font-size: 60rpx;
  color: #999;
  vertical-align: middle;
  margin-left: 5%;
}

.search {
  width: 620rpx;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  background: rgba(245, 245, 245, 1);
  border: 1px solid rgba(116, 114, 114, 0.15);
}

.search text {
  font-size: 35rpx;
  vertical-align: middle;
  color: #777;
  margin-left: 22rpx;
  font-weight: bold;
}

.input-placeholder {
  display: inline-block;
  width: 500rpx;
  vertical-align: middle;
  margin: auto 0;
  margin-left: 10rpx;
  color: var(--color-login-notice);
  font-size: var(--font-size-medium-x);
}

.edit {
  font-size: 40rpx;
  color: var(--color-sub-title);
  margin-left: 22rpx;
}

.choice {
  display: flex;
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #EAEAEA;
}

.choice text {
  width: 25%;
  text-align: center;
  color: var(--color-sub-title);
  font-size: var(--font-size-large);
}

.active {
  color: var(--color-deep-blue) !important;
}

.mask {
  position: absolute;
  width: 100%;
  height: 85%;
  top: 15%;
  background-color: rgba(0, 0, 0, .8);
  font-size: 32rpx;
  color: #323232;
}

.mask .list {
  width: 100%;
  background-color: #fff;
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-top: 1rpx solid #dcdcdc;
}

.mask .list .item {
  padding: 22rpx 36rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #dcdcdc;
}

.mask .list .item:last-child {
  border-bottom: none;
}

.mask .input-group {
  width: 100%;
  padding: 10rpx 16rpx 10rpx 58rpx;
  box-sizing: border-box;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #dcdcdc;
}

.mask .input-group .price-input {
  width: 100rpx;
  height: 50rpx;
  background-color: #eee;
}

.mask .input-group .min-price {
  margin-left: 30rpx;
}

.mask .input-group .line {
  width: 25rpx;
  height: 0rpx;
  border-top: 2rpx solid #b5b5b5;
  margin-left: 2rpx;
  margin-right: 2rpx;
}

.mask .input-group .unit {
  margin-left: 18rpx;
  color: #666;
}

.mask .input-group .submit-btn {
  width: 215rpx;
  height: 99rpx;
  background-color: var(--color-button-background);
  font-size: 36rpx;
  color: #fff;
}

.label-group {
  background-color: #fff;
  padding: 18rpx 43rpx 25rpx 62rpx;
  box-sizing: border-box;
}

.label-group .label-list {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.label-group .levator {
  display: flex;
  justify-content: flex-start;
}

.label-group .label-list .label-item {
  width: 146rpx;
  height: 59rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  text-align: center;
  line-height: 59rpx;
  margin-bottom: 20rpx;
}

.label-group .levator .label-item {
  margin-right: 20rpx;
}

.mask .more-submit {
  width: 705rpx;
  height: 99rpx;
  line-height: 99rpx;
  margin: 0 auto;
  text-align: center;
  color: #fff;
  background-color: #298ef8;
  font-size: 36rpx;
  margin-bottom: 37rpx;
}
