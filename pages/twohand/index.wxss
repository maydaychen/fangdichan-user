/* pages/me/collection/index.wxss */
@import '/static/iconfont/iconfont.wxss';
@import '/template/template.wxss';

page {
  background: var(--color-white);
}

.top {
  padding: 20rpx;
  display: flex;
}

.top>text {
  font-size: 60rpx;
  color: #999;
  vertical-align: middle;
  margin-left: 5%;
}

.search {
  width: 620rpx;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  background: rgba(245, 245, 245, 1);
  border: 1px solid rgba(116, 114, 114, 0.15);
}

.search text {
  font-size: 35rpx;
  vertical-align: middle;
  color: #777;
  margin-left: 22rpx;
  font-weight: bold;
}

.input-placeholder {
  display: inline-block;
  width: 500rpx;
  vertical-align: middle;
  margin: auto 0;
  margin-left: 10rpx;
  color: var(--color-login-notice);
  font-size: var(--font-size-medium-x);
}

.edit {
  font-size: 40rpx;
  color: var(--color-sub-title);
  margin-left: 22rpx;
}

.choice {
  display: flex;
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #EAEAEA;
}

.choice text {
  width: 25%;
  text-align: center;
  color: var(--color-sub-title);
  font-size: var(--font-size-large);
}

.active {
  color: var(--color-deep-blue) !important;
}