.abnor {
  position: relative;
  display: block;
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  overflow: hidden;
}

.abnor__box {
  position: absolute;
  display: flex;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.abnor__image {
  width: 230rpx;
  background: transparent no-repeat;
  background-size: cover;
}

.abnor__text {
  margin-top: 90rpx;
  color: var(--color-sub-text);
  font-size: var(--font-size-large-x);
}