/* 基础css变量：可以根据当前模块去修改 */

page {
  /* 颜色定义规范 */
  --color-theme: #3c7bfe; /* 品牌色、主题色 */
  --color-sub-theme: #6c9cff; /* 控件色 */
  --color-background: #f5f5f5; /* 背景色 */
  --color-gold: #f4b906; /* 金色示例色值 */
  --color-title: #333; /* 用于重要及文字信息、内容标题信息 */
  --color-sub-title: #666; /* 用于普通级段落、用户名、icon */
  --color-text: #888; /* 用于辅助、次要的文字信息、icon */
  --color-sub-text: #8a8a8a; /* 用于辅助、次要的文字信息、icon */
  --color-prompt: #ccc; /* 用于刷新失败内容文字提醒 */
  --color-split-line: #ddd; /* 分割线色 */
  --color-split-line-sub: #d2d2d2; /* 浅色分割线色 */
  --color-notification-background: #f2f8fd; /* 通知背景色 */
  --color-white: #fff;
  --color-light-green: #e6f2e6;
  --color-deep-green: #5cb66a;
  --color-light-blue: #e3edfb;
  --color-deep-blue: #1c87d8;
  --color-certification-title: #323232;
  --color-border-color: #dcdcdc;
  --color-light-yellow: #f4b906;
  --color-button-background: #298ef8;
  --color-login-notice: #8a8a8a;
  --color-go-button-white: #f0f2f5;
  --color-go-text: #0f5ad5;
  --color-unactive-color: #a8a8a8;
  --color-border-color: #d2d2d2;
  --color-qrcode-title: #EFEFEF;
  --color-qrcode-bg-color: #1C84D5;
  --color-sure-btn: #1A84D5;
  --color-date-bolor: #818181;
  --color-placeholder-color: #7D8794;
  /* 字体定义规范 */
  --font-size-large-h: 48rpx;
  --font-size-large-z: 40rpx; /* 适用于按钮字体 */
  --font-size-large-x: 36rpx; /* 适用于重要标题 */
  --font-size-large-a: 34rpx;
  --font-size-large-y: 32rpx;
  --font-size-large: 30rpx; /* 适用于正文标题、内容、按钮 */
  --font-size-medium-x: 28rpx; /* 适用于列表名称、正文 */
  --font-size-medium: 26rpx; /* 适用于列表名称、正文 */
  --font-size-small: 24rpx; /* 适用于提示文字、次要描述文字 */
  --font-size-small-a: 22rpx;
  --font-size-small-s: 20rpx; /* 适用于提示文字、次要描述文字 */
}
